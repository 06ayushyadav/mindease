{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "skipLibCheck": true,
    "strict": false,
    "noEmitOnError": false,
    "outDir": "dist"
  },
  "include": ["backend/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
